type SizePrice {
  size: String!
  price: Float!
}

type Sneaker {
  id: ID!
  brand: String!
  productName: String!
  sizePrices: [SizePrice!]!  # ðŸ‘ˆ Not JSON
  images: [String!]!
  soldOut: Boolean!
  productLink: String!
  sellerName: String
  sellerUrl: String
}

type Watch {
  id: ID!
  brand: String!
  name: String!
  color: String!
  salePrice: Float!
  marketPrice: String!
  images: [String!]!
  link: String!
  sellerName: String
  sellerUrl: String
  gender: String
}

type PerfumeVariant {
  size: String
  price: Float
}

type Perfume {
  id: ID!
  brand: String!
  title: String!
  fragranceFamily: String!
  concentration: String
  subcategory: String
  variants: [PerfumeVariant!]
  images: [String!]
  url: String!
  sellerName: String
  sellerUrl: String
}

type Accessory {
  id: ID!
  brand: String!
  productName: String!
  subcategory: String!
  gender: String!
  sizePrices: [SizePrice!]!
  images: [String!]!
  inStock: Boolean!
  productLink: String!
  sellerName: String
  sellerUrl: String
}

type Apparel {
  id: ID!
  brand: String!
  productName: String!
  subcategory: String!
  gender: String!
  sizePrices: [SizePrice!]!
  images: [String!]!
  inStock: Boolean!
  productLink: String!
  sellerName: String
  sellerUrl: String
}

